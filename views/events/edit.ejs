<% layout('layouts/boilerplate')%>
<section class="new-edit-form" id="new-edit-form">
    <div class="container mt-5">
      <div class="section-title">
        <h2>Edit <%= event.title %></h2>
      </div>
      <div class="row">
        <div class="offset-lg-2 col-lg-8">
          <form action="/events/<%= event._id %>?_method=PUT" method="POST" role="form" class="credit-form">
            <div class="form-row">
              <div class="col-md-6 form-group">
                <input type="text" name="event[title]" value="<%= event.title %>" class="form-control" id="title" required/>
                <div class="invalid-feedback">
                    Please Enter the Events Title
                </div>
              </div>
              <div class="col-md-6 form-group">
                <input type="time" class="form-control" name="event[time]" value="<%= event.time %>" id="time" required/>
                <div class="invalid-feedback">
                    What time is the event?
                </div>
              </div>
            </div>
            <div class="form-row">
                <div class="col-md-6 form-group">
                  <input type="text" name="event[location]" value="<%= event.location %>" class="form-control" id="location" required/>
                  <div class="invalid-feedback">
                    Where is the event?
                  </div>
                </div>
                <div class="col-md-6 form-group">
                  <input type="date" class="form-control" name="event[onDate]" value="<%= event.onDate %>" id="onDate" required/>
                  <div class="invalid-feedback">
                    When is the event?
                  </div>
                </div>
            </div>
            <div class="form-group">
              <input type="text" class="form-control" name="event[image]" value="<%= event.image %>" id="image" required/>
              <div class="invalid-feedback">
                Image makes it look better  
              </div>
            </div>
            <div class="form-group">
              <select name="type" id="type" class="form-control" required>
                <option value="Birds-of-Feather">Birds of Feather</option>
                <option value="Alumini-Webinar">Alumni Webinar</option>
                <option value="Breakout">Breakout</option>
                <option value="Paper-Discussion">Paper Discussion</option>
                <option value="Collaboration">Collaboration</option>
              </select>
              <div class="invalid-feedback">
                Please choose the type of event. 
              </div>
            </div>
            <div class="form-group">
              <input type="text" class="form-control" name="event[applyLink]" value="<%= event.applyLink %>" id="applyLink"/>
              <div class="invalid-feedback">
                Registration Link for the Event! 
              </div>
            </div>
            <div class="form-group">
              <input type="text" class="form-control" name="recordinglink" id="recordinglink" value="<%= event.recordinglink %>"/>
              <div class="invalid-feedback">
                Recording Links
              </div>
            </div>
            <div class="form-group">
              <textarea class="form-control" name="event[para1]" rows="8"><%= event.para1 %></textarea>
              <div class="invalid-feedback">
                Tell them something about the event.
              </div>
            </div>
            <div class="form-group">
              <textarea class="form-control" name="event[para2]" rows="8"><%= event.para2 %></textarea>
              <div class="invalid-feedback">
                Tell them something about the event.
              </div>
            </div>
            <div class="form-group">
              <textarea class="form-control" name="event[para3]" rows="8"><%= event.para3 %></textarea>
              <div class="invalid-feedback">
                Tell them something about the event.
              </div>
            </div>
            <div class="text-center"><button type="submit" class="site-btn">Edit event</button></div>
          </form>
          <a href="/events" class="site-btn-2">Go Back</a>
        </div>
      </div>
    </div>
</section>
