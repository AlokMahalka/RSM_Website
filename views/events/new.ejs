<% layout('layouts/boilerplate')%>

<section class="new-edit-form" id="new-edit-form" data-aos="fade-up" data-aos-easing="ease-in-out" data-aos-duration="500">
    <div class="container mt-5">
      <div class="section-title">
        <h2>Create New Event</h2>
      </div>
      <div class="row">
        <div class="col-lg-3">
        </div>
        <div class="col-lg-6">
          <form action="/events" method="post" role="form" class="credit-form" novalidate>
            <div class="form-row">
              <div class="col-md-6 form-group">
                <input type="text" name="title" class="form-control" id="title" placeholder="Event Title" required/>
                <div class="invalid-feedback">
                  Please Enter the Events Title
                </div>
              </div>
              <div class="col-md-6 form-group">
                <input type="time" class="form-control" name="time" id="time" placeholder="Event time:" required/>
                <div class="invalid-feedback">
                  What time is the event?
                </div>
              </div>
            </div>
            <div class="form-row">
                <div class="col-md-6 form-group">
                  <input type="text" name="location" class="form-control" id="location" placeholder="Location:" equired/>
                  <div class="invalid-feedback">
                    Where is the event?
                  </div>
                </div>
                <div class="col-md-6 form-group">
                  <input type="date" class="form-control" name="onDate" id="onDate" placeholder="Event Date" required/>
                  <div class="invalid-feedback">
                    When is the event?
                  </div>
                </div>
            </div>
            <div class="form-group">
              <input type="text" class="form-control" name="image" id="image" placeholder="Image URL" required/>
              <div class="invalid-feedback">
                Image makes it look better  
              </div>
            </div>
            <div class="form-group">
              <select name="type" id="type" class="form-control" placeholder="Type of Event" required>
                <option value="Birds-of-Feather">Birds of Feather</option>
                <option value="Alumini-Webinar">Alumini Webinar</option>
                <option value="Breakout">Breakout</option>
                <option value="Paper-Discussion">Paper Discussion</option>
              </select>
              <div class="invalid-feedback">
                Please choose the type of event. 
              </div>
            </div>
            <div class="form-group">
              <input type="text" class="form-control" name="applyLink" id="applyLink" placeholder="Link to Register"/>
              <div class="invalid-feedback">
                Registration Link for the Event!  
              </div>
            </div>
            <div class="form-group">
              <textarea class="form-control" name="description" rows="8" placeholder="Description" required></textarea>
              <div class="invalid-feedback">
                Tell them something about the Event.
              </div>
            </div>
            <div class="text-center"><button type="submit">Create Event</button></div>
          </form>
          <a href="/events">Go Back</a>
        </div>
        <div class="col-lg-3">
        </div>

      </div>
    </div>
</section>
