<% layout('layouts/boilerplate')%>
<section class="new-edit-form spade" id="new-edit-form">
    <div class="container mt-5">
      <div class="section-title"> 
        <h2>Edit <%= post.title %></h2>
      </div>
      <div class="row">
        <div class="offset-lg-2 col-lg-8">
          <form action="/posts/<%= post._id %>?_method=PUT" method="post" role="form" class="credit-form">
            <div class="form-row">
              <div class="col-md-6 form-group">
                <input type="text" name="post[name]" value="<%= post.name %>" class="form-control" id="name" placeholder="Author's Name" required/>
                <div class="invalid-feedback">
                  Please Enter the Authors Name
                </div>
              </div>
              <div class="col-md-6 form-group">
                <input type="text" class="form-control" name="post[title]" value="<%= post.title %>" id="title" placeholder="Title" required/>
                <div class="invalid-feedback">
                  It wont look good without a title.
                </div>
              </div>
            </div>
            <div class="form-row">
              <div class="col-md-6 form-group">
                <input type="text" name="post[profName]" value="<%= post.profName %>" class="form-control" id="profName" placeholder="Professor's Name"/>
              </div>
              <div class="col-md-6 form-group">
                <select name="status" id="status" class="form-control" placeholder="Status of Project" required>
                  <option value="Projects-With-Vacancies">Project With Vacancies</option>
                  <option value="Completed-Project">Completed Project</option>
                  <option value="Ongoing-Project">Ongoing Project</option>
                </select>
                <div class="invalid-feedback">
                  What is the status of the project?
                </div>
              </div>
            </div>
            <div class="form-row">
                <div class="col-md-6 form-group">
                  <input type="number" name="post[students]" value="<%= post.students %>" class="form-control" id="students" min="0" placeholder="No. of Students"/>
                  <div class="invalid-feedback">
                    How many helping hands do you need?
                  </div>
                </div>
                <div class="col-md-6 form-group">
                  <input type="text" class="form-control" name="post[eligible]" value="<%= post.eligible %>" id="eligible" placeholder="Eligibilty"/>
                </div>
            </div>
            <div class="form-group">
              <input type="text" class="form-control" name="post[members]" id="members" value="<%= post.members %>" placeholder="Members of the team" required/>
            </div> 
            <div class="form-group">
              <input type="text" class="form-control" name="post[field]" id="field" value="<%= post.field %>" placeholder="Project Fields" required/>
            </div>
            <div class="form-group">
              <input type="text" class="form-control form-control-lg" name="post[image]" id="image" value="<%= post.image %> " placeholder="Image Link" required/>
              <div class="invalid-feedback">
                Image makes it look better  
              </div>
            </div>
            <div class="form-group">
              <input type="text" class="form-control" name="post[skills]" value="<%= post.skills %>" placeholder="Skills Required"/>
              <div class="invalid-feedback">
                What skills are required?
              </div>
            </div>
            <div class="form-group">
              <textarea class="form-control" name="post[descIntro]" placeholder="Description" rows="4"><%= post.descIntro %></textarea>
              <div class="invalid-feedback">
                Give it a introduction.
              </div>
            </div>
            <div class="form-group">
              <textarea class="form-control" name="post[desc]" rows="8"><%= post.desc %></textarea>
              <div class="invalid-feedback">
                Tell them something about the project.
              </div>
            </div>
            <div class="form-group">
              <input type="text" class="form-control" name="post[output]" id="output" value="<%= post.output %>" placeholder="Result(if completed)"/>
            </div>
            <div class="text-center"><button type="submit" class="site-btn">Edit Post</button></div>
          </form>
          <a href="/posts" class="site-btn-2">Go Back</a>
        </div>
      </div>
    </div>
</section>
