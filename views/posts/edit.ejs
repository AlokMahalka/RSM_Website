<% layout('layouts/boilerplate')%>
<section class="new-edit-form" id="new-edit-form" data-aos="fade-up" data-aos-easing="ease-in-out" data-aos-duration="500">
    <div class="container mt-5">
      <div class="section-title">
        <h2>Edit <%= post.name %></h2>
      </div>
      <div class="row">
        <div class="col-lg-3">
        </div>
        <div class="col-lg-6">
          <form action="/posts/<%= post._id %>?_method=PUT" method="post" role="form" class="credit-form" novalidate>
            <div class="form-row">
              <div class="col-md-6 form-group">
                <input type="text" name="post[name]" value="<%= post.name %>" class="form-control" id="name" required/>
                <div class="invalid-feedback">
                  Please Enter the Authors Name
                </div>
              </div>
              <div class="col-md-6 form-group">
                <input type="text" class="form-control" name="post[title]" value="<%= post.title %>" id="title" required/>
                <div class="invalid-feedback">
                  It wont look good without a title.
                </div>
              </div>
            </div>
            <div class="form-row">
                <div class="col-md-6 form-group">
                  <input type="number" name="post[students]" value="<%= post.students %>" class="form-control" id="students" min="0" required/>
                  <div class="invalid-feedback">
                    How many helping hands do you need?
                  </div>
                </div>
                <div class="col-md-6 form-group">
                  <input type="date" class="form-control" name="post[endDate]" value="<%= post.endDate %>" id="endDate" required/>
                  <div class="invalid-feedback">
                    Please enter a date.
                  </div>
                </div>
            </div>
            <div class="form-group">
              <input type="text" class="form-control" name="post[image]" value="<%= post.image %>" id="image" required/>
              <div class="invalid-feedback">
                Image makes it look better  
              </div>
            </div>
            <div class="form-group">
              <input type="text" class="form-control" name="post[skills]" value="<%= post.skills %>" id="image" required/>
              <div class="invalid-feedback">
                What skills are required?
              </div>
            </div>
            <div class="form-group">
              <textarea class="form-control" name="post[descIntro]" rows="4" required><%= post.descIntro %></textarea>
              <div class="invalid-feedback">
                Give it a introduction.
              </div>
            </div>
            <div class="form-group">
              <textarea class="form-control" name="post[desc]" rows="8" required><%= post.desc %></textarea>
              <div class="invalid-feedback">
                Tell them something about the project.
              </div>
            </div>
            <div class="text-center"><button type="submit">Edit Post</button></div>
          </form>
          <a href="/posts">Go Back</a>
        </div>
        <div class="col-lg-3">
        </div>

      </div>

    </div>
</section>
