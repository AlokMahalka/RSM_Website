<% layout('layouts/boilerplate')%>
<section class="contact-section spad" id="contact">
  <div class="container">
      <div class="row justify-content-center ">
          <div class="col-12 col-md-6">
              <div class="register">
                  <h4 class="text-white">Join Us</h4>
                  <% if(typeof alert != 'undefined'){ %>
                    <%   alert.forEach(function(error){ %>
                        <div class="alert alert-warning alert-dismissible fade show" role="alert">
                          <%= error.msg %>
                          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                          </button>
                        </div>
                    <% }) %>
                    <%} %> 
                  <form action="/register" method="post" role="form" class="register-form">
                      <div class="row">
                          <div class="col-lg-6">
                            <input type="text" name="username" class="form-control" placeholder="Username"/>
                          </div>
                          <div class="col-lg-6">
                            <input type="email" name="email" class="form-control" placeholder="Email"/>
                          </div>
                          <div class="col-md-6">
                            <h6 class="text-white">Are you from MIT?</h6>  
                            <input type="checkbox" name="isMIT" id="checkbox1" value="true" />
                            <input type="email" name="emailMIT" class="form-control" id="showthis1" placeholder="LearnersId"/>                  
                          </div>
                          <div class="col-md-6">
                            <h6 class="text-white">Have an Admin Code?</h6>
                            <input type="checkbox" name="checkbox" id="checkbox2" value="true" /> 
                            <input type="text" name="adminCode" class="form-control" id="showthis2" placeholder="AdminCode"/>
                          </div>
                          <div class="col-lg-12">
                            <input type="text" name="regNo" class="form-control" placeholder="Registration Number"/>
                          </div>
                          <div class="col-lg-12">
                            <input type="password" name="password" class="form-control" placeholder="Password">
                              <button type="submit" class="site-btn">Register</button>
                          </div>
                      </div>
                  </form>
              </div>
          </div>
      </div>
  </div>
</section>